<div id="overlay">
	<div id="popup">
		
		<b>words:</b> 49 (1300) / <b>known:</b> 67% (0, 30) / <b>cover:</b> 81% (1031)
		<div id="words_table">
		<table id ="words">
		  <tr>
		    <th>word</th>
		    <th>count</th>
		    <th>un</th>
			<th>translation</th>
		  </tr>		
		<% @words.each do |word| %>
		  <tr>
		    <td><%= word[0] %></td>
		    <td><%= word[1] %></td>
			<td><a href='#' onclick='moveWord(this)'>un</a></td>
		  </tr>
		<% end %>
		</table>
		</div>	
		<div id="known_table">
		<table id="known">
		  <tr>
		    <th>word</th>
		    <th>count</th>
		    <th>back</th>
		  </tr>		
		</table>
		</div>	
		<div id="generate"><a href='#' onclick='generate()'><b>generate</b></a></div>
		<div id="close"><a href='#' onclick='closePopup()'>close</a></div>		
	</div>
</div>