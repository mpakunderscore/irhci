		<% @words.each do |word| %>
		  <tr>
		    <td><%= word[0] %></td>
		    <td><%= word[1] %></td>
			<td><a href='#' onclick='getTranslation(this)'>translate</a></td>
		  </tr>
		<% end %>
		</table>
