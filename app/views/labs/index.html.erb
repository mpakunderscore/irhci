	<table border="0">
	<tr>
	<td>Select text file (.srt or etc): </td>
	<td>
		<div style="border:1px solid #CECECE">
			<%= form_tag({:action => :upload}, :multipart => true, remote: true) do %>
			<%= file_field 'upload', 'datafile' %>			
